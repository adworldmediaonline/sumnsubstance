# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/sumnsubstance"

# Next.js Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="SumnSubstance"

# Better Auth Configuration
BETTER_AUTH_SECRET="your-super-secret-key-here-change-in-production"
BETTER_AUTH_URL="http://localhost:3000"

# OAuth Providers (if using social login)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Razorpay Payment Gateway Configuration
# Test Mode Keys (for development)
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_your_test_key_id"
RAZORPAY_KEY_SECRET="your_test_key_secret"

# Live Mode Keys (for production - uncomment and use these)
# NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_live_your_live_key_id"
# RAZORPAY_KEY_SECRET="your_live_key_secret"

# Razorpay Webhook Secret (for payment verification)
RAZORPAY_WEBHOOK_SECRET="your_razorpay_webhook_secret"

# Email Configuration (for order confirmations)
# Using Resend (recommended)
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="orders@sumnsubstance.com"
EMAIL_FROM_NAME="SumnSubstance Team"

# Alternative: SMTP Configuration (if not using Resend)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Order Configuration
NEXT_PUBLIC_MIN_ORDER_VALUE="100"
NEXT_PUBLIC_FREE_SHIPPING_THRESHOLD="500"
NEXT_PUBLIC_GST_RATE="0.18"
NEXT_PUBLIC_SHIPPING_RATE="50"

# Admin Configuration
ADMIN_EMAIL="admin@sumnsubstance.com"
ADMIN_NOTIFICATION_EMAIL="notifications@sumnsubstance.com"

# Security & Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Monitoring (optional)
SENTRY_DSN="your-sentry-dsn"

# Environment
NODE_ENV="development"

# Order Number Configuration
ORDER_NUMBER_PREFIX="ORD"
ORDER_NUMBER_LENGTH="8"

# Shipping Configuration
DEFAULT_SHIPPING_DAYS="5-7"
EXPRESS_SHIPPING_DAYS="2-3"

# Currency Configuration
NEXT_PUBLIC_CURRENCY="INR"
NEXT_PUBLIC_CURRENCY_SYMBOL="â‚¹"

# Feature Flags
NEXT_PUBLIC_ENABLE_GUEST_CHECKOUT="true"
NEXT_PUBLIC_ENABLE_COD="false"
NEXT_PUBLIC_ENABLE_WALLET="false"

# File Upload Limits
NEXT_PUBLIC_MAX_FILE_SIZE="5242880"  # 5MB in bytes
NEXT_PUBLIC_MAX_FILES="10"

# Session Configuration
SESSION_MAX_AGE="604800"  # 7 days in seconds

# API Rate Limiting
API_RATE_LIMIT="1000"
API_RATE_WINDOW="3600"

# Development Tools
NEXT_PUBLIC_ENABLE_DEVTOOLS="true"
NEXT_PUBLIC_SHOW_DEBUG_INFO="false"
